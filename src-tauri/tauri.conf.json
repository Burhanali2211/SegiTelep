{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SegiTelep",
  "version": "1.0.0",
  "identifier": "com.segitelep.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SegiTelep - Professional Segmentation Teleprompter",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Â© 2024 Ali. All rights reserved.",
    "shortDescription": "Professional Segmentation Teleprompter",
    "longDescription": "SegiTelep is a professional teleprompter application with advanced segmentation features, designed for smooth content delivery and broadcast workflows."
  }
}
